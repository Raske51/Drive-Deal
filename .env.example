# Authentication
JWT_SECRET=your-32-char-min-jwt-secret-here
JWT_REFRESH_SECRET=your-32-char-min-refresh-secret-here
PASSWORD_PEPPER=your-32-char-min-password-pepper-here
SESSION_SECRET=your-32-char-min-session-secret-here

# Database
MONGODB_URI=mongodb://localhost:27017/drivedeal
MONGODB_USER=your-mongodb-user
MONGODB_PASSWORD=your-mongodb-password

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=your-aws-region
AWS_BUCKET_NAME=your-bucket-name

# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
STRIPE_PRICE_ID=your-stripe-price-id

# Email
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@yourdomain.com

# reCAPTCHA
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=https://yourdomain.com
ENCRYPTION_KEY=your-32-char-min-encryption-key
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf
MAX_FILE_SIZE=5242880

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOGTAIL_SOURCE_TOKEN=your-logtail-token

# Feature Flags
ENABLE_2FA=true
ENABLE_FILE_ENCRYPTION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_HISTORY=true
MAX_PASSWORD_HISTORY=5
PASSWORD_EXPIRY_DAYS=90

# Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# ClamAV Configuration
CLAMAV_HOST=localhost
CLAMAV_PORT=3310 